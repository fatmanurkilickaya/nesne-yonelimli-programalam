using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    internal class Program
    {
        static void Main(string[] args)
        {
          
        }
    }

    public class Cokgen
    {
        protected void AlanHesapla(int kenar1, int kenar2)
        {
            Console.WriteLine($"çokgenin alanı: {kenar1 * kenar2}");

        }
        protected void CevreHesapla(int kenar1, int kenar2)
        {
            Console.WriteLine($"çokgenin çevresi: {2*(kenar1 + kenar2)}");

        }
    }
    public class DikDortgen : Cokgen
    {
        public int k1, k2;
        public DikDortgen()
        {
            AlanHesapla(k1,k2);
        }

    }
    public class Kare : Cokgen
    {

    }




}
